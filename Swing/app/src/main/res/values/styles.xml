<resources >

    <!-- Base application theme. -->
    <style name="AppThemeViewlib" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeViewlib.DialogNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <!--  dialog主题设置  -->
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="android:dialogTheme">@style/DialogNoTitle</item>
    </style>

    <style name="DialogNoTitle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item><!--除去title-->
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/color_black</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Positive</item>
    </style>

    <style name="AlertDialog.Negative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/hex_9c9c9c</item>
    </style>

    <style name="AlertDialog.Positive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/hex_1b89cd</item>
    </style>

    <style name="ThemeTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="button_main">
        <item name="android:layout_height">@dimen/base_40</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_main_profile" parent="@style/button_main">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">@dimen/base_56</item>
        <item name="android:layout_marginEnd">@dimen/base_56</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="button_main_no_click">
        <item name="android:layout_height">@dimen/base_40</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/btn_normal_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_text_main">
        <item name="android:textColor">@color/color_gray_deep</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/main_edit_text_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/color_edit_hint_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="textview_main">
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_hint">
        <item name="android:textColor">@color/color_gray_main</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textview_toolbar">
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_photo_cancel">
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="calendar_header_textappearance">
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_calendar_event">
        <item name="android:textColor">@color/color_gray_main</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textview_calendar_hint" parent="textview_calendar_event">
        <item name="android:textColor">@color/color_gray_main</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edittext_calendar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/color_gray_main</item>
        <item name="android:textColor">@color/color_gray_main</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="option_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_gray_light</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="option_right_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/icon_right</item>
    </style>

    <style name="calendar_red_star">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/base_5</item>
        <item name="android:text">*</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">@dimen/base_1</item>
        <item name="android:textColor">@color/color_red</item>
    </style>

    <style name="dashboard_chart_emotion">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/color_orange_main</item>
        <item name="android:textColorPrimary">@color/color_orange_main</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="textview_calendar_todo_title">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_calendar_todo_description">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="calendar_selector">
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="exceedColor">@color/color_gray_deep</item>
        <item name="todayColor">@color/color_orange_main</item>
    </style>


    <style name="calendar_week">
        <item name="android:textColor">@color/color_gray_deep</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="exceedColor">@color/color_gray_light</item>
        <item name="focusBackgroundColor">@color/color_gray</item>
        <item name="todayBackgroundColor">@color/color_orange_main</item>
        <item name="focusColor">@color/color_white</item>
        <item name="todayColor">@color/color_white</item>
        <item name="weekNameColor">@color/color_orange_main</item>
    </style>

    <style name="textview_profile_group">
        <item name="android:textColor">@color/profile_label_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/base_10</item>
        <item name="android:paddingEnd">@dimen/base_10</item>
    </style>


    <style name="line_profile_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_1</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="profile_label_layout">
        <item name="android:paddingEnd">@dimen/base_15</item>
        <item name="android:paddingStart">@dimen/base_15</item>
    </style>

    <style name="edittext_profile" parent="@android:style/Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/color_gray_light</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="kids_share_avatar_view">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="strokeColorNormal">@color/hex_1b89cd</item>
    </style>


    <style name="kids_request_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/request_arrow_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/base_5</item>
        <item name="android:layout_marginEnd">@dimen/base_5</item>
        <item name="android:textSize">@dimen/base_48</item>
    </style>

    <style name="kids_request_img_arrow">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/base_5</item>
        <item name="android:layout_marginEnd">@dimen/base_5</item>
    </style>

    <style name="profile_name_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fontsize52</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/profile_logout_confirm_name</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="profile_name_2_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/fontsize42</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/hex_9c9c9c</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="profile_info_tip_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingStart">@dimen/base_15</item>
        <item name="android:paddingEnd">@dimen/base_15</item>
        <item name="android:textSize">@dimen/fontsize60</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
