<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/base_15">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  tools:context="com.kidsdynamic.swing.MainActivity">

        <TextView
            android:id="@+id/text_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Hello World!--AvenirTextView"
            android:textSize="@dimen/base_15"
            />

        <com.kidsdynamic.swing.view.AvenirTextView
            android:id="@+id/text_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Hello World!--AvenirTextView"
            android:textSize="@dimen/base_15"
            />

        <com.kidsdynamic.swing.view.AvenirTextView
            android:id="@+id/text_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Hello World!--AvenirTextView"
            android:textSize="@dimen/base_15"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Hello World!--AvenirTextView"
            android:textSize="@dimen/base_15"
            />

        <TextView
            android:id="@+id/text_test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Hello World!--AvenirTextView"
            android:textSize="@dimen/base_15"
            />

        <Button
            android:id="@+id/button_test_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login_ts"
            app:layout_constraintBottom_toBottomOf="@id/text_test"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="299dp"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"
            app:layout_constraintBottom_toBottomOf="@id/button_test_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="188dp"/>

        <Button
            android:id="@+id/btn_upload_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uploadAvatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_test_login"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="172dp"/>

        <Button
            android:id="@+id/btn_kids_is_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="watchBindInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_upload_avatar"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="172dp"/>

        <Button
            android:id="@+id/btn_kids_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="addKids"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="172dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_show_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="showMain"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="172dp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/default_avatar"
            android:background="@drawable/control_profile_focus_bg"/>

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/user_avatar_iv"
            android:layout_width="@dimen/base_35"
            android:layout_height="@dimen/base_35"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ds30"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar" />
    </LinearLayout>
</ScrollView>