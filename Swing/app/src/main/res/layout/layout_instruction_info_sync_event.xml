<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/introduction_layout_bg">

    <include layout="@layout/layout_instruction_info"
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_48"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_info">
        <TextView
            android:id="@+id/tv_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/down_arrow"
            android:textSize="50sp"
            android:textColor="@color/color_white"/>

        <Button
            android:id="@+id/dashboard_main_sync"
            style="@style/button_main_no_click"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/base_56"
            android:layout_marginEnd="@dimen/base_56"
            android:layout_height="40sp"
            android:layout_below="@+id/tv_down_arrow"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/calendar_month_sync"
            android:clickable="false"
            android:enabled="false"/>
    </RelativeLayout>


</RelativeLayout>