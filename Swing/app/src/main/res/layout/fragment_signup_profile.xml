<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="@dimen/base_56"
            android:layout_height="@dimen/base_56"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_left" />

        <com.kidsdynamic.swing.view.AvenirTextView
            android:id="@+id/signup_profile_exit"
            android:layout_width="@dimen/base_56"
            android:layout_height="@dimen/base_56"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="Exit"
            android:textColor="@color/color_gray_deep"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.kidsdynamic.swing.view.ViewCircle
                android:id="@+id/signup_profile_photo"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_gravity="center_horizontal"
                app:crossColor="@color/hex_1b89cd"
                app:crossWidth="2dp"
                app:strokeColorNormal="@color/hex_1b89cd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_56"
                android:layout_marginRight="@dimen/base_56"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/signup_profile_first"
                    style="@style/edit_text_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:hint="@string/signup_profile_first_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:nextFocusForward="@+id/registration_info_last" />

                <EditText
                    android:id="@+id/signup_profile_last"
                    style="@style/edit_text_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:hint="@string/signup_profile_last_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:nextFocusForward="@+id/registration_info_phone" />

                <EditText
                    android:id="@+id/signup_profile_phone"
                    style="@style/edit_text_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:hint="@string/signup_profile_phone_number"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:nextFocusForward="@+id/signup_profile_zip" />

                <!--<EditText-->
                <!--android:id="@+id/signup_profile_zip"-->
                <!--style="@style/edit_text_main"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:gravity="center"-->
                <!--android:hint="@string/signup_profile_zip_code"-->
                <!--android:imeOptions="actionDone"-->
                <!--android:inputType="number"-->
                <!--android:visibility="gone" />-->

                <com.kidsdynamic.swing.view.AvenirTextView
                    android:id="@+id/signup_profile_submit"
                    style="@style/button_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/signup_profile_next" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>