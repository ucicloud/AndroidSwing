<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_chart_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <com.kidsdynamic.swing.view.ViewSponge
            android:id="@+id/dashboard_chart_indicator_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.3" />

        <com.kidsdynamic.swing.view.ViewDotIndicator
            android:id="@+id/dashboard_chart_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/dashboard_chart_indicator_sponge"
            android:layout_alignStart="@+id/dashboard_chart_indicator_sponge"
            app:dotColorOff="@color/color_gray_light"
            app:dotColorOn="@color/color_gray"
            app:dotCount="4"
            app:dotPosition="0"
            app:dotSize="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.kidsdynamic.swing.view.ViewSponge
            android:id="@+id/dashboard_chart_selector_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.6" />

        <com.kidsdynamic.swing.view.ViewTextSelector
            android:id="@+id/dashboard_chart_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/dashboard_chart_selector_sponge"
            android:layout_alignStart="@+id/dashboard_chart_selector_sponge"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.kidsdynamic.swing.view.AvenirTextView
        android:id="@+id/dashboard_chart_message"
        style="@style/dashboard_chart_emotion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:textStyle="bold" />

    <com.kidsdynamic.swing.view.ViewChartToday
        android:id="@+id/dashboard_chart_today"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:padding="20dp"
        app:axisColor="@color/color_white"
        app:axisHEnabled="true"
        app:axisHMax="15000"
        app:chartTextColor="@color/color_white"
        app:chartTextSize="16sp" />

    <!--<com.kidsdynamic.swing.view.ViewChartBarHorizontal-->
    <!--android:id="@+id/dashboard_chart_horizontal"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="5"-->
    <!--android:padding="20dp"-->
    <!--app:axisColor="@color/color_white"-->
    <!--app:axisHEnabled="true"-->
    <!--app:axisHMax="15000"-->
    <!--app:chartTextSize="16sp" />-->

    <com.kidsdynamic.swing.view.ViewChartBarVertical
        android:id="@+id/dashboard_chart_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/base_18"
        android:layout_weight="6"
        android:background="@drawable/chart_background"
        android:paddingLeft="@dimen/base_18"
        android:paddingRight="@dimen/base_18"
        android:paddingTop="@dimen/base_18"
        android:visibility="gone"
        app:axisTextSize="11sp"
        app:axisVMax="15000"
        app:axisWidth="1dp"
        app:chartTextColor="@color/color_white"
        app:chartTextSize="11sp"
        app:chartTitleTextSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@null">

        <RadioGroup
            android:id="@+id/dashboard_chart_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dashboard_chart_indoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_bg_orange"
                android:button="@null"
                android:paddingBottom="@dimen/base_6"
                android:paddingLeft="@dimen/base_30"
                android:paddingRight="@dimen/base_30"
                android:paddingTop="@dimen/base_6"
                android:text="@string/dashboard_chart_indoor"
                android:textAllCaps="false"
                android:textColor="@color/text_orange_white_change_selector"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/dashboard_chart_outdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_10"
                android:background="@drawable/border_button_bg_orange"
                android:button="@null"
                android:paddingBottom="@dimen/base_6"
                android:paddingLeft="@dimen/base_30"
                android:paddingRight="@dimen/base_30"
                android:paddingTop="@dimen/base_6"
                android:text="@string/dashboard_chart_outdoor"
                android:textAllCaps="false"
                android:textColor="@color/text_orange_white_change_selector"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RadioGroup>
    </RelativeLayout>

</LinearLayout>